{
	"name": "Rust on Steroids (ROS)",
	"dockerComposeFile": [
		"docker-compose.yml"
	],
	"service": "development",
	"workspaceFolder": "/workspace",

	// Set *default* container specific settings.json values on container create.
	"customizations": {
		"vscode": {
			"settings": {
				"lldb.executable": "/usr/bin/lldb",
				// VS Code don't watch files under ./target
				"files.watcherExclude": {
					"**/target/**": true
				},
				"rust-analyzer.checkOnSave.command": "clippy"
			},
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"vadimcn.vscode-lldb",
				"hbenl.vscode-test-explorer",
				"mutantdino.resourcemonitor",
				"rust-lang.rust-analyzer",
				"tamasfe.even-better-toml",
				"serayuzgur.crates",
				"gilescope.arrowdebugging",
				"alefragnani.Bookmarks",
				"kevinkassimo.cargo-toml-snippets",
				"aaron-bond.better-comments",
				"DioxusLabs.dioxus",
				"usernamehw.errorlens",
				"Luxcium.pop-n-lock-theme-vscode",
				"jinxdash.prettier-rust",
				"eamodio.gitlens",
				"dotenv.dotenv-vscode",
				"panicbit.cargo",
				"zxh404.vscode-proto3",
				"redhat.vscode-yaml",
				"Gruntfuggly.todo-tree",
				"Swellaby.vscode-rust-test-adapter",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"github.vscode-github-actions",
				"bierner.markdown-mermaid",
				"masterustacean.cargo-bin",
				"masterustacean.cargo-runner",
				"jedeop.crates-completer",
				"GitHub.codespaces",
				"GitHub.vscode-pull-request-github",
				"ms-vscode.test-adapter-converter"
			]
		}
	},

	"remoteEnv": {
		// You can create env vars on your local machine and they will get passed into your container.
		"EMAIL": "${localEnv:EMAIL}",
		"NAME": "${localEnv:NAME}",
		// Pass in the host directory for Docker mount commands from inside the container
		"HOST_PROJECT_PATH": "${localWorkspaceFolder}"
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [5432],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "rustc --version",

	// Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode"
}